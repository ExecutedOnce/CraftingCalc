QuarterCalc = 0.25
HalfCalc = 0.5
ThirdCalc = 1/3
TwoThirdCalc = 2/3

#modifiers -9% resources required, +9% resources per run.
t1OreModifierReduction = 9
t1OreModifierProduction = 9

##converts skills to usable modifier on each side of recipe.
OreReduction = (-(t1OreModifierReduction - 100) / 100) #0.91 modifier
BarProduction = ((t1OreModifierProduction+100)/100) #1.09 modifier

#multiple ores
iron_ore = 0
coal_ore = 0

#steelplates 1:2 (Coal to Iron) 150 ore to 75 plates.
steel_plates = 0
#totals
TotalCoalOreNeeded = 0
TotalIronOreNeeded = 0

def AlloyCalc():
    #150 bar to 75 steel.
    SteelAlloy = [150, 75]
    FinalSteelAlloyConversionRate = (SteelAlloy[0]*OreReduction)/(SteelAlloy[1]*BarProduction)
    CoalBar, IronBAr = (FinalSteelAlloyConversionRate*SteelAlloy[1])*ThirdCalc, (FinalSteelAlloyConversionRate*SteelAlloy[1])*TwoThirdCalc
    print(FinalSteelAlloyConversionRate*SteelAlloy[1], CoalBar, IronBAr)
    #below is temporary, inefficient code for (hopefully) the sake of readability. ore to bar base ratio 65:45
    Ore_Conversion = ((65*OreReduction/45*BarProduction))
    CoalOre2, IronOre2 = (Ore_Conversion*CoalBar), (Ore_Conversion*IronBAr)
    print("Coal1 and 2:",CoalBar, CoalOre2,"Iron1 and 2:", IronBAr, IronOre2, "ConversionCheck=", Ore_Conversion)
    return (TotalIronOreNeeded + IronOre2), TotalCoalOreNeeded + CoalOre2

TotalIronOreNeeded, TotalCoalOreNeeded = AlloyCalc()
print(TotalCoalOreNeeded, TotalIronOreNeeded)
